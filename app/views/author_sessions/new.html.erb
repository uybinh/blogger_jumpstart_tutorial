
<div class="login-box">

  <h1>Login</h1>
  <%= form_tag login_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email,"", placeholder: "Your email", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password,"", placeholder: "Your password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Login", class: "btn btn-primary" %>
  </div>
  <% end %>
  <p>Test account:<br>
  Email: <strong>binh@gmail.com</strong> <br>
  Password: <strong>binh</strong></p>
</div>
